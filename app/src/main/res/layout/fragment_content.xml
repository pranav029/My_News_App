<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.ContentFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">
       <com.google.android.material.appbar.CollapsingToolbarLayout
           android:id="@+id/ct_toolbar"
           android:layout_width="match_parent"
           android:layout_height="300dp"
           app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
           app:contentScrim="@color/lightBlue"
           app:title="@string/app_name"
           app:collapsedTitleGravity="start"
           app:collapsedTitleTextAppearance="@style/collapsingToolbarLayoutTitleColor"
           app:expandedTitleTextAppearance="@style/expandingToolbarLayoutTitleColor"
           app:titleCollapseMode="scale">

           <ImageView
               android:id="@+id/iv_image"
               android:layout_width="match_parent"
               android:layout_height="300dp"
               android:layout_gravity="center"
               android:foreground="@drawable/image_overlay"
               android:scaleType="fitXY"
               android:transitionName="contentImage"
               app:layout_collapseMode="parallax"
               app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
               app:srcCompat="@mipmap/ic_launcher"
               tools:ignore="UseAppTint" />
           <androidx.appcompat.widget.Toolbar
               android:id="@+id/t_toolbar"
               android:layout_width="match_parent"
               android:layout_height="?attr/actionBarSize"
               app:title="hello"
               app:titleTextColor="@color/white"
               app:navigationIcon="@drawable/ic_baseline_arrow_back"
               app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
               app:layout_collapseMode="pin" />

       </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        app:layout_anchorGravity="bottom"
        app:layout_anchor="@id/appBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

       <include
           android:id="@+id/inc_content"
           layout="@layout/item_content"/>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/iv_save"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        app:backgroundTint="#ECDDDD"
        android:foregroundGravity="center"
        android:foreground="@drawable/ic_unsaved"
        app:layout_anchor="@id/appBar"
        app:layout_anchorGravity="bottom|right|end" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>