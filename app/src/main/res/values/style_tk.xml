<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="editText" parent="Theme.My_News_App">
        <item name="android:background">@drawable/border_textinput</item>
    </style>
    <style name="chipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/chip_selector</item>
        <item name="chipStrokeColor">@color/lightBlue</item>
        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@drawable/chip_text_selector</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="checkedIconTint">@color/lightBlue</item>
        <item name="checkedIconEnabled">true</item>
        <item name="checkedIconVisible">true</item>
        <item name="android:checkable">true</item>
        <item name="android:checked">false</item>
    </style>

    <style name="bottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@drawable/bottom_nav_selector</item>
        <item name="itemTextColor">@drawable/bottom_nav_selector</item>
    </style>
</resources>